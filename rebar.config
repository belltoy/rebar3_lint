{erl_opts, [debug_info]}.
{deps, [{elvis_core, "~>1.0.0"}]}.
{project_plugins, [rebar3_hex]}.

{dialyzer, [
    {warnings, [unmatched_returns, error_handling, underspecs]},
    {get_warnings, true},
    {plt_apps, top_level_deps},
    {plt_extra_apps, []},
    {plt_location, local},
    {base_plt_apps, [erts, kernel, stdlib]}
]}.

{cover_enabled, true}.

{cover_opts, [verbose]}.

{alias, [{test, [dialyzer, ct, cover]}]}.

{elvis,
 [#{dirs => ["src"],
    filter => "*.erl",
    ruleset => erl_files
   },
  #{dirs => ["."],
    filter => "rebar.config",
    ruleset => rebar_config
   },
  #{dirs => ["."],
    filter => "elvis.config",
    ruleset => elvis_config
   }
 ]
}.

